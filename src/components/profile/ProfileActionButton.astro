---
import CvDownloadButton from "./CvDownloadButton.tsx";
import LinkedIn from "../icons/LinkedIn.astro";
import {ME, isUpworkEnv} from '@/config.ts';
import {Button} from "../ui/button";

const {linkedin, email} = ME.contactInfo;
---

<div class="profile-action-buttons w-full flex gap-2">
    <CvDownloadButton client:load/>
    {!isUpworkEnv &&
            <Button size="icon"
                    className="[&_svg]:size-8 h-14 w-14 li-btn flex-none text-n700 dark:text-n200 bg-white dark:bg-black hover:bg-grey-500 dark:hover:bg-n700 transition-all">
                <a href={linkedin} aria-label="my linkedIn profile link">
                    <LinkedIn width={24} height={24}/>
                </a>
            </Button>
            <Button size="icon"
                    className="[&_svg]:size-6 h-14 w-14 li-btn flex-none dark:text-n200 bg-white dark:bg-black hover:bg-grey-500 dark:hover:bg-n700 transition-all">
                <a href={`mailto:${email}`} aria-label="send me an email">
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                         class="fill-n700 dark:fill-light-theme">
                        <path d="M3 3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3ZM12.0606 11.6829L5.64722 6.2377L4.35278 7.7623L12.0731 14.3171L19.6544 7.75616L18.3456 6.24384L12.0606 11.6829Z"></path>
                    </svg>
                </a>
            </Button>
    }
</div>
